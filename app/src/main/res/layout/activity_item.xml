<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.inventoryapp_udacity_project.ItemActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/edit_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" />

        <EditText
            android:id="@+id/edit_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="price" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity" />

        <TextView
            android:id="@+id/edit_quantity_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-" />

        <EditText
            android:id="@+id/edit_quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0" />

        <TextView
            android:id="@+id/edit_quantity_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="+" />
    </LinearLayout>
    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@android:color/darker_gray"
        android:padding="15dp"/>

    <Button
        android:id="@+id/buy_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order More!"
        android:visibility="invisible" />


</LinearLayout>
